<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@mipmap/bg_home">

    <com.victor.tv.library.widget.tablayout.TvTabLayout
        android:id="@+id/tablayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        app:tabIndicatorResId="@mipmap/titile_top"
        app:tabIndicatorWidth="@dimen/dp_108"
        app:tabIndicatorHeight="@dimen/dp_15"
        app:tabMinWidth="@dimen/dp_120"
        app:tabScrollMode="scrollable"
        app:tabGravity="center"
        app:tabPaddingBottom="@dimen/dp_12"
        app:tabTexSize="@dimen/dp_22"
        app:tabTextColor="@drawable/title_textcolor_selector"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_home"
        android:layout_below="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <!-- 最顶层边框 -->
    <com.victor.tv.library.widget.MainUpView
        android:id="@+id/mainUpView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
